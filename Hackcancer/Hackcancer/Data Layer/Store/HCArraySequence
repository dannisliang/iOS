import Foundation

class HCArraySequence<T>: RACSequence
{
    override init()
    {
        super.init()
    }
    
    convenience init(array: [T], offset: Int = 0)
    {
        self.init()
        
        backingArray = array
        self.offset = offset
    }
    
    required init(coder aDecoder: NSCoder)
    {
        super.init(coder: aDecoder)
        
        var object = aDecoder.decodeObjectForKey("array")
        backingArray = object as [T]?
    }
    
    private
    
    var backingArray: [T]?
    var offset: Int = 0
}